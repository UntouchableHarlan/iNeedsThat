<div class="container">
  <%= form_for [current_user, @debtor], class: "form-inline", id: "debtor-form" do |f| %>
  <div class="col-md-12">
    <div class="col-md-6">
      <div class="form-group">
        <!-- <label for="name-field">Name</label> -->
        <%= f.text_field :name, class: "form-control", placeholder: "Name...." %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <!-- <label for="number-field">Amount</label> -->
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.number_field :amount, class: "form-control", placeholder: "Amount OwedðŸ’¸....." %>
          <div class="input-group-addon">.00</div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <%= f.text_area :description, class: "form-control", placeholder: "Why You Needs That..." %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.submit "You Needs That From Em", class: "btn btn-success", id: "owe-btn" %>
    </div>
  </div>

  <% end %>
</div>
